# Configuration pour le déploiement Veza avec Incus
# Copiez ce fichier vers .env.deploy et ajustez les valeurs selon vos besoins

# Configuration réseau
VEZA_NETWORK_RANGE="10.100.0.0/24"
VEZA_NETWORK_GATEWAY="10.100.0.1"

# Configuration des IPs statiques des containers
VEZA_FRONTEND_IP="10.100.0.11"
VEZA_BACKEND_IP="10.100.0.12"
VEZA_CHAT_IP="10.100.0.13"
VEZA_STREAM_IP="10.100.0.14"
VEZA_POSTGRES_IP="10.100.0.15"
VEZA_HAPROXY_IP="10.100.0.16"
VEZA_REDIS_IP="10.100.0.17"
VEZA_STORAGE_IP="10.100.0.18"

# Configuration base de données
DATABASE_NAME="veza_db"
DATABASE_USER="veza_user"
DATABASE_PASSWORD="veza_password"

# Configuration sécurité
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Configuration stockage ZFS
ZFS_POOL_SIZE="50GB"
UPLOADS_VOLUME_SIZE="10GB"
AUDIO_VOLUME_SIZE="20GB"
BACKUPS_VOLUME_SIZE="15GB"
CACHE_VOLUME_SIZE="5GB"

# Configuration services
BACKEND_PORT="8080"
CHAT_PORT="8081"
STREAM_PORT="8082"
FRONTEND_PORT="5173"
HAPROXY_STATS_PORT="8404"

# Configuration développement
NODE_ENV="development"
RUST_LOG="debug"
GO_ENV="development"

# Origines autorisées (CORS)
ALLOWED_ORIGINS="http://10.100.0.11:5173,http://10.100.0.16"

# Tailles max uploads
UPLOAD_MAX_SIZE="50000000"

# Configuration cache
CACHE_ENABLED="true"
CACHE_TTL="3600"

# Configuration logs
LOG_LEVEL="info"
LOG_FORMAT="json"

# Configuration SSL (pour production)
SSL_ENABLED="false"
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Versions des outils
GO_VERSION="1.21.5"
NODE_VERSION="20"
RUST_TOOLCHAIN="stable"

# Image de base pour les containers
CONTAINER_IMAGE="images:debian/bookworm"

# Configuration HAProxy
HAPROXY_STATS_USER="admin"
HAPROXY_STATS_PASSWORD="admin"

# Configuration sauvegarde
BACKUP_ENABLED="true"
BACKUP_RETENTION_DAYS="30"

# Configuration monitoring
HEALTH_CHECK_INTERVAL="30"
SERVICE_TIMEOUT="300" 